<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
<div class="container" style="margin-bottom: 5rem;">
    <div class="row">
      <div class="col-12 col-lg-8">
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item"><a class="page-link" href="/Event/search?<%= pageCond.url %>page=<%= Math.max(pageCond.nowPage-1, 1) %>">Previous</a></li>
            <% for(i=1; i<= pageCond.pageTotalNum; i++){ %>
            <li class="page-item<% if(i==pageCond.nowPage){ %> active<% } %>"><a class="page-link" href="/Event/search?<%= pageCond.url %>page=<%= i %>"><%= i %></a></li>
            <% } %>
            <li class="page-item"><a class="page-link" href="/Event/search?<%= pageCond.url %>page=<%= Math.min(pageCond.nowPage+1, pageCond.pageTotalNum) %>">Next</a></li>
          </ul>
        </nav>
        <div class="row" style="margin-bottom: 1rem;">
            <% events.forEach( function(model){ %>
            <div class="card col-12 col-lg-6">
                <img class="card-img-top" src="<%= model.imgURL %>">
                <div class="card-body">
                    <h5 class="card-title"><a href="/Event/details/<%= model.id %>"><%= model.eventName %></a></h5>
                    <p class="card-text"><%= model.shortDesc %></p>
                </div>
            </div>
            <% }); %>
        </div>
      </div>
      <div class="col-12 col-lg-4">
        <form action="/Event/search" method="GET">
          <div class="form-group">
            <label for="name">Event name:</label>
            <input type="text" class="form-control" id="eventName" name="eventName">
          </div>
          <div class="form-group">
              <label for="organizer">Organizer:</label>
              <select class="form-control" name="organizer" id="organizer">
                  <option>Government and International Stuides</option>
                  <option>Student Organization</option>
                  <option>School Departments</option>
              </select>
          </div>
          <div class="form-group">
            <label for="name">Start Date:</label>
            <input type="text" class="form-control" id="startDate" name="startDate">
          </div>
          <div class="form-group">
            <label for="name">End Date:</label>
            <input type="text" class="form-control" id="endDate" name="endDate">
          </div>
          <div class="form-group">
            <label for="venue">Venue:</label>
            <select class="form-control" name="venue" id="venue">
                <option>SWT 501</option>
                <option>SWT 502</option>
                <option>SWT 503</option>
                <option>SWT 504</option>
                <option>SWT 505</option>
            </select>
          </div>
          <div class="form-group">
              <button type="submit" class="btn btn-success">Search</button>
          </div>
        </form>
      </div>
    </div>
  </div>